@using EntityLayer.Concrete
@model List<Booking>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>

                        <tr>

                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Telefon Numarası</th>

                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            count++;
                            <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@(((DateTime)@item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                            <td>@(((DateTime)@item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                            <td>@item.PhoneNumber</td>
                            <td><span class="badge badge-info px-2">@item.Status</span></td>
                            <td><a href="/AdminBooking/ApprovedReservation/@item.BookingID" class="btn btn-outline-success">Onayla</a></td>
                            <td><a href="/AdminBooking/CancelReservation/@item.BookingID" class="btn btn-outline-danger">İptal Et</a></td>
                            <td><a href="/AdminBooking/WaitReservation/@item.BookingID" class="btn btn-outline-warning">Beklet</a></td>
                            <td><a href="/AdminBooking/UpdateBooking/@item.BookingID" class="btn btn-outline-info">Güncelle</a></td>
                            

                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


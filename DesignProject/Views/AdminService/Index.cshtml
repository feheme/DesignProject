@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>       
        <th>Sil</th>
        <th>Güncelle</th>
      



    </tr>
    @foreach (var item in Model)
    {
        <tr>

             <td>@item.ServiceID</td>             
             <td>@item.Title</td>
             <td><a href="/AdminService/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
             <td><a href="/AdminService/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
           


        </tr>
    }


</table>

<a href="/AdminService/AddService/" class="btn btn-info">Yeni Hizmet Girişi</a>



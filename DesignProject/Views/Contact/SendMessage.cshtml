@model EntityLayer.Concrete.Contact

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-info text-uppercase">BİZE YAZIN</h6>
            <h1 class="mb-5"><span class="text-info text-uppercase">Tüm Sorularınızı</span> Bize İletin</h1>
        </div>
        <div class="row g-4">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-info text-uppercase">Rezervasyon</h6>
                        <p><i class="fa fa-envelope-open text-info me-2"></i>reservation@erciyes.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-info text-uppercase">Genel Sorularınız</h6>
                        <p><i class="fa fa-envelope-open text-info me-2"></i>general@erciyes.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-info text-uppercase">İş Başvurusu</h6>
                        <p><i class="fa fa-envelope-open text-info me-2"></i>ik@erciyes.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12454.064396839653!2d35.52091520831848!3d38.705958348245!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152b0d80b0573465%3A0xc6e55fc623330b00!2sErciyes%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1686741020098!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>


            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="SendMessage" asp-controller="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Adınız Soyadınız">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                    <label for="name">Adınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Mail Adresiniz" asp-for="Mail">
                                    <span class="text-danger" asp-validation-for="Mail"></span>

                                    <label for="email">Mail Adresiniz</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Başlık" asp-for="Subject">
                                    <span class="text-danger" asp-validation-for="Subject"></span>

                                    <label for="subject">Konu</label>
                                </div
                                <br />

                               
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Mesajınızı Giriniz" id="message" asp-for="Message"
                                        style="height: 150px"></textarea>
                                    <span class="text-danger" asp-validation-for="Message"></span>

                                    <label for="message">Mesajınız</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-info w-100 py-3" type="submit">Mesajı Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<Room>
    <div class="container-xxl py-5" id = "rooms">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-info text-uppercase">Odalarımız</h6>
                <h1 class="mb-5">Odalarımızı <span class="text-info text-uppercase">KEŞFEDİN</span></h1>
            </div>
            <div class="row g-4">
                @foreach (var item in Model)
                {


                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="@item.RoomCoverImage" alt="">
                            <small
                                class="position-absolute start-0 top-100 translate-middle-y bg-info text-white rounded py-1 px-3 ms-4">@item.Price₺/Gece</small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@item.Title</h5>
                                <div class="ps-2">
                                 <small><i class="fas fa-building text-info me-2"></i>@item.RoomCount adet oda mevcuttur</small>

                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-info me-2"></i>@item.BedCount
                                    Yatak</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-info me-2"></i>@item.BathCount
                                    Banyo</small>
                                <small><i class="fa fa-wifi text-info me-2"></i>@item.Wifi Wifi</small>
                                
                            </div>
                            <hr>
                           @* <p class="text-body mb-3">
                                @item.
                            </p>*@

                            @if (item.RoomCount > 0)
                            {
                                <div class="d-flex justify-content-between">
                                
                                <a class="btn btn-sm btn-dark rounded py-2 px-4" href="/Booking/Index/">Rezervasyon 
                                    Yap
                                </a>
                            </div>
                            }
                            
                        </div>
                    </div>
                </div>
                }
            </div>

        </div>
    </div>